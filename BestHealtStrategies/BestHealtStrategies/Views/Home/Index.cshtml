                            {

                                @foreach (var meal in dailyPlan.Meals)
                                {
                                    <p>Title: @meal.Title</p>
                                    <p>Summary: @meal.Summary;</p>
                                    <p>Instructions: @meal.Instructions;</p>
                                    <p>Time required: @meal.ReadyInMinutes);</p>
                                    <p>Servings: @meal.Servings);</p>
                                    <img src="@meal.Image" alt="Error loading image" />
                                    <a href="@meal.SourceURL">Source URL: @meal.SourceURL</a>
                                }

                            }
                        }


