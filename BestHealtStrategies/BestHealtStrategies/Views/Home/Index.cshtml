                        @if (Model != null)
                        {
                            Summary: @Html.DisplayNameFor(model => model.WeeklyMealPlan[0].Meals[0].Summary);
                            <p>Instructions: @Html.DisplayNameFor(model => model.WeeklyMealPlan[0].Meals[0].Instructions);</p>
                            <p>Time required: @Html.DisplayNameFor(model => model.WeeklyMealPlan[0].Meals[0].ReadyInMinutes);</p>
